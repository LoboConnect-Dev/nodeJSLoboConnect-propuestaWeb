<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@9"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://kit.fontawesome.com/a81368914c.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-p34f1UUtsS3wqzfto5wAAmdvj+osOnFyQFpp4Ua3gs/ZVWx6oOypYoCJhGGScy+8" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-wEmeIV1mKuiNpC+IOBjI7aAzPcEZeedi5yW5f2yOq55WWLwNGmvvx4Um1vskeMj0" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="assets/css/login_register.css">
    <link href="https://fonts.googleapis.com/css?family=Poppins:600&display=swap" rel="stylesheet">
    <title>Notificar</title>
</head>

<body>
    <nav class="navbar navbar-expand-lg bg-blueObsc">
        <div class="container-fluid">
            <a class="navbar-brand" style="color: white;" href="#">LOBO CONNECT</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#menuDesplegable" aria-controls="menuDesplegable" aria-expanded="false" aria-label="Toggle navigation">
                <i class="fas fa-bars"></i>
          </button>
            <div class="collapse navbar-collapse" id="menuDesplegable">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="/avisosGestion">Avisos</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/historial">Historial</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/notificaciones">Notificaciones <span style="color: rgb(255, 0, 0);"><%= numNotify %></span></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link " href="/perfil">Perfil</a>
                    </li>
                </ul>
                <a id="exit" class="btn ms-auto" href="/sesion/exit">Salir <i class="fas fa-sign-out-alt"></i></a>
            </div>
        </div>
    </nav>
    <header class="text-center" style="background-color:rgb(20, 43, 76); color: white;">
        <h3 class="title p-2">Notificaciones</h3>
    </header>
    <!-- Card de historial -->
    <div class="container-md">

        <h1 style="text-align: center; color: rgb(233, 96, 96); margin-top: 15px;">
            <%= mensaje%>
        </h1>
        <% avisos.forEach(aviso => { %>
            <div class="card mb-3 card-bg" style="max-width: 100% ">
                <div class="row g-0 ">
                    <div class="col-md-3">
                        <img src="<%= aviso.imgAviso %> " class="img-fluid rounded displayCenter">
                    </div>
                    <div class="col-md-4">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%= aviso.tituloAviso  %>
                            </h5>

                            <p class="card-text">
                                <%= aviso.descripcionAviso  %>
                            </p>
                            <p class="card-text"><small class="text-muted"><%= aviso.lapsoAviso %> </small></p>

                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card-body">
                            <p class="card-text fst-italic">

                                <%= '"'+aviso.comentario+'"' %>
                            </p>
                            <small class="text-muted"><%= aviso.usuarioNotificador %> </small>
                            <small class="text-muted"><%= aviso.fecha %> </small>
                        </div>
                    </div>
                    <div class="col-md-1">
                        <a title="Firmar comentario" style="cursor: pointer;" onclick="firmarComentario('<%= aviso.id_notify%>')" class="text-center mx-auto"> <i class="fas fa-pen-square displayCenter"></i> </a>
                    </div>
                    <script>
                        function firmarComentario(a) {
                            Swal.fire({
                                title: 'Firmar comentario',
                                text: "Al firmar este comentario se eliminará, asegurate de haber tomado nota",
                                icon: 'Precaución',
                                showCancelButton: true,
                                confirmButtonColor: '#198754',
                                cancelButtonColor: '#a9a9a9',
                                confirmButtonText: 'Firmar',
                                cancelButtonText: 'Cancelar'
                            }).then((result) => {
                                if (result.isConfirmed) {
                                    var url = "/comentarioRevisado/" + a;
                                    console.log(url);
                                    location.href = url;
                                }
                            })
                        }
                    </script>

                </div>
            </div>
            <% }); %>
    </div>
    <script src="assets/js/size_display.js"></script>
</body>

</html>
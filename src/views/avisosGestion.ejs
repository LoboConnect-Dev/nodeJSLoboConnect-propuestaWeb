    <header class="text-center pb-1" style="background-color:rgb(20, 43, 76);color: white;">
        <h3 class="title">Gesti√≥n de avisos</h3>
    </header>
    <!-- </div> -->
    <main>
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-4 col-md-4 mb-1">
                    <div class="card mt-3 shadow">
                        <div class="card-header text-white h3 text-center" style="background-color: rgba(64, 171, 53);">
                            Capturar Aviso
                        </div>
                        <div class="card-body">
                            <div class="card-capturar">
                                <!-- FORMULARIO CAPTURAR ------------------------------------------------------------>
                                <form style="width: 100%;" action="/consultas/altaAviso" method="POST" id="aviso-capturar" enctype="ajax multipart/form-data">
                                    <div class="form-group">
                                        <label for="titulo" style="font-size: 15px;">Titulo</label>
                                        <input type="hidden" class="form-control" id="id" name="id" value="<%= aviso.titulo_id %>">
                                        <input type="text" value="<%= aviso.titulo %>" class="form-control" id="titulo" name="titulo" required>
                                    </div>
                                    <div class="form-group">
                                        <label for="Descripci√≥n" style="font-size: 15px;">Descripci√≥n</label>
                                        <textarea style="resize: none;" class="form-control" name="descripcion" id="descripcion" cols="30" rows="12" form="aviso-capturar"><%= aviso.descripcion %> </textarea>
                                    </div>
                                    <div class="d-grid gap-2">
                                        <input type="submit" class="btn btn-outline-primary btn-lg" value="Publicar" id="btn-guardar">
                                    </div>
                                </form>
                                <!-- FORMULARIO CAPTURAR ------------------------------------------------------------>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- PANEL DE AVISOS ------------------------------------------------------------>
                <div class="col-lg-8 col-md-8">
                    <div class="card mt-3 shadow">
                        <div class="card-header text-white h3 text-center" style="background-color: rgba(64, 171, 53);">
                            Avisos Publicados
                        </div>
                        <div class="card-body">
                            <table class="table table-hover" style="position:relative; max-width: 100%;">
                                <thead class="thead-dark">
                                    <tr>
                                        <th scope="col">Titulo</th>
                                        <th scope="col" class="ocultar"> Descripci√≥n</th>
                                        <th scope="col" class="ocultar"> Fecha de publicaci√≥n</th>
                                        <th colspan="2" scope="col">Editar/Borrar</th>
                                    </tr>
                                </thead>
                                <% avisos.forEach(aviso => { %>
                                    <tbody id="productos">

                                        <td>
                                            <%= aviso.titulo %>
                                        </td>
                                        <td class="ocultar">
                                            <%= aviso.descripcion %>
                                        </td>
                                        <td class="ocultar">
                                            <%= aviso.fecha %>
                                        </td>
                                        <td>
                                            <a class="btn btn-outline-warning" href="/obtenerID/<%= aviso.titulo_id %>">
                                                <h5>üìù</h5>
                                            </a>
                                            <a class="btn btn-outline-danger" style="cursor: pointer;" onclick="confirmarDelete('<%= aviso.titulo_id %>')">
                                                <h5>‚ùå</h5>
                                            </a>
                                        </td>
                                    </tbody>

                                    <!-- ALERTA POR SI EL USUARIO QUIERE ELIMINAR ALG√öN AVISO -->
                                    <script>
                                        function confirmarDelete(a) {
                                            Swal.fire({
                                                title: '¬øEst√°s seguro?',
                                                text: "¬°Esta acci√≥n elimina tambi√©n los comentarios relacionados a este aviso, no se podr√° revertir!",
                                                icon: 'Precauci√≥n',
                                                showCancelButton: true,
                                                confirmButtonColor: '#d33',
                                                cancelButtonColor: '#a9a9a9',
                                                confirmButtonText: 'Si, eliminar',
                                                cancelButtonText: 'Cancelar'
                                            }).then((result) => {
                                                if (result.isConfirmed) {
                                                    Swal.fire(
                                                        '¬°Eliminado!',
                                                        'Tu archivo ha sido eliminado.',
                                                        'success'
                                                    )
                                                    var url = "/eliminar/" + a;
                                                    console.log(url);
                                                    location.href = url;
                                                }
                                            })
                                        }
                                    </script>
                                    <!-- ALERTA POR SI EL USUARIO QUIERE ELIMINAR ALG√öN AVISO -->
                                    <% }); %>
                            </table>
                        </div>
                    </div>
                </div>
                <!-- PANEL DE AVISOS ------------------------------------------------------------>
            </div>
        </div>
